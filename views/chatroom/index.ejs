<% layout("/layouts/boilerplate") -%>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      height: 100%;
      font-family: 'Segoe UI', sans-serif;
    }

    body {
      background: linear-gradient(120deg, #fdfbfb, #ebedee);
      display: flex;
      flex-direction: column;
    }

    .chat-wrapper {
      flex: 1;
      display: flex;
      flex-direction: column;
      height: 95%;
      max-height: 100vh;
    }

    .chat-container {
      flex: 1;
      overflow-y: auto;
      padding: 15px 10px;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .message {
      display: block;
      padding: 10px 15px;
      border-radius: 20px;
      font-size: 1rem;
      word-wrap: break-word;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .received {
      background-color: #A18D5E;
      color: #fff;
      align-self: flex-start;
      border-bottom-left-radius: 0;
    }

    .sent {
      background-color: #5E72A1;
      color: #fff;
      align-self: flex-end;
      border-bottom-right-radius: 0;
    }

    .input-container {
      display: flex;
      padding: 12px 10px;
      background: #fff;
      border-top: 1px solid #ccc;
    }

    .input-container input {
      flex: 1;
      padding: 10px 15px;
      border-radius: 25px;
      border: 1px solid #ccc;
      font-size: 14px;
      outline: none;
    }

    .input-container button {
      margin-left: 10px;
      background-color: #5E72A1;
      border: none;
      border-radius: 25px;
      color: #fff;
      padding: 10px 20px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .input-container button:hover {
      background-color: #3f4f86;
    }

    @media (max-width: 600px) {
      .message {
        max-width: 85%;
        font-size: 1rem !important;
      }

      .input-container input {
        font-size: 13px;
      }

      .input-container button {
        padding: 8px 14px;
        font-size: 13px;
      }
    }
    
    .delete-btn{
      margin: 0;
      padding: 0;
      display: inline-block;
      background-color: transparent;
      align-self: flex-end;
    }
    .message-delete{
      display: inline;
      margin: 0;
      padding: 0;
    }
    .delete-button{
      border: none;
      background-color: transparent;
    }
  </style>

  <div class="chat-wrapper">
    <div class="chat-container" id="chatBox">
      <% for(sm of allMessages){ %>
        <% if(sm.sender.equals(currUser)){ %>
          <div class="message sent"><%= sm.msg %>
            <% if(currUser) { %>
              <form action="/inbox/<%= sm._id %>?_method=DELETE" method="post" class="message-delete">
                <button type="submit" class="delete-button">
                  <i class="fa-solid fa-ellipsis-vertical delete-btn"></i>
                </button>
              </form>
            <% } %>
            <br>
            <span class="ms-time-date">
              <%= sm.sender.username %> — <%= new Date(sm.createdAt).toLocaleString() %>
            </span>
          </div>
        <% } else { %>
          <div class="message received"><%= sm.msg %><br>
            <span class="ms-time-date">
              <%= sm.sender.username %> — <%= new Date(sm.createdAt).toLocaleString() %>
            </span>
          </div>
        <% } %>
      <% } %>
    </div>
  
    <!-- ✅ Moved outside for better fixed positioning -->
    <div class="input-container">
      <form id="message-form" class="message-form">
        <input type="text" id="message-input" class="form-control" autocomplete="off" required>
        <button type="submit"><i class="fa-solid fa-circle-chevron-right"></i></button>
      </form>
    </div>
  </div>
  